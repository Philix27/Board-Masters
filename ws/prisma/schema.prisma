generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model game {
  id         String     @id @unique
  status     GameStatus
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  moves      moves[]
}

enum GameStatus {
  WAITING
  STARTED
  PAUSED
  COMPLETED
}

model moves {
  id         String   @id
  game_id    String
  game       game     @relation(fields: [game_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model users {
  id           String   @id @unique
  wallet       String   @unique
  username     String
  total_points Int
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
}
