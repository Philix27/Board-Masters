{
  "name": "board-masters",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:mini": "turbo run dev --filter=mini",
    "dev:wss": "turbo run dev --filter=wss",
    "dev:server": "turbo run dev --filter=server",
    "build:mini": "turbo run build --filter=mini",
    "install:mini": "turbo run install --filter=mini"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.6",
  "lint-staged": {
    "**/*.{ts,tsx,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
